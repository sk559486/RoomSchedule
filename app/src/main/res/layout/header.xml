<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:id="@+id/header_id">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:fontFamily="sans-serif-condensed"
        android:text="Room 007D"
        android:id="@+id/text_room_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="100dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_header_time"
        android:textSize="80dp"
        android:fontFamily="sans-serif-condensed"
        android:format24Hour="h:mm a"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:format12Hour="EEE MMM dd, yyyy"
        android:format24Hour="EEE MMM dd, yyyy"
        android:id="@+id/text_header_date"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/text_header_time"
        android:layout_alignEnd="@+id/text_header_time"
        android:layout_alignStart="@+id/text_header_time"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/network_unavail_image"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/text_header_time"
        android:src="@drawable/ic_red_icon"
        android:layout_marginRight="40dp" />

</RelativeLayout>